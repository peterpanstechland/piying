{
  "name": "shadow-puppet-system",
  "version": "1.0.0",
  "description": "皮影互动系统 - Shadow Puppet Interactive System",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "build:portable": "electron-builder --win portable",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "shadow-puppet",
    "interactive",
    "computer-vision",
    "electron"
  ],
  "author": "Your Company",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.shadowpuppet.system",
    "productName": "皮影互动系统",
    "copyright": "Copyright © 2024",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "launcher.html",
      "splash.html",
      "build/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!**/__pycache__/**",
          "!**/tests/**",
          "!**/*.pyc",
          "!**/.pytest_cache/**"
        ]
      },
      {
        "from": "../frontend/dist",
        "to": "frontend/dist"
      },
      {
        "from": "../admin-frontend/dist",
        "to": "admin-frontend/dist"
      },
      {
        "from": "../assets",
        "to": "assets",
        "filter": [
          "**/*",
          "!**/*.md"
        ]
      },
      {
        "from": "../config",
        "to": "config"
      },
      {
        "from": "../.env",
        "to": ".env"
      },
      {
        "from": "../venv",
        "to": "venv",
        "filter": [
          "**/*",
          "!**/__pycache__/**",
          "!**/pip/**",
          "!**/setuptools/**"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "皮影互动系统",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "license": "build/license.txt",
      "runAfterFinish": true,
      "installerLanguages": ["zh_CN", "en_US"],
      "language": "2052"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    }
  }
}
